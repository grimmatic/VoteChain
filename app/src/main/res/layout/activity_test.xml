<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blockchain Test Sayfası"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnInitWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Cüzdanı Başlat"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCreateElection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Test Seçimi Oluştur"
            android:enabled="false"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAddCandidate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Test Adayı Ekle"
            android:enabled="false"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnVote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Test Oylaması Yap"
            android:enabled="false"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnGetResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Sonuçları Getir"
            android:enabled="false"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blockchain testlerine başlamak için 'Cüzdanı Başlat' butonuna tıklayın."
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:fontFamily="monospace"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>